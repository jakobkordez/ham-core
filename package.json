{
  "name": "ham-core",
  "version": "1.0.0",
  "description": "A monorepo with Ham radio packages and apps",
  "keywords": [],
  "author": "Jakob Korde≈æ S52KJ",
  "scripts": {
    "build": "pnpm -r --filter=./packages/** run build",
    "build:all": "pnpm -r run build",
    "build:ham-log": "pnpm --filter ham-log build",
    "build:call-tester": "pnpm --filter call-tester build",
    "dev:ham-log": "pnpm --filter ham-log dev",
    "dev:call-tester": "pnpm --filter call-tester dev",
    "test": "pnpm -r test -- --run"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.8",
    "vitest": "^2.1.8"
  }
}
